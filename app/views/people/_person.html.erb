<div id="<%= dom_id person %>">
  <p>
    <strong>First name:</strong>
    <%= person.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= person.last_name %>
  </p>

  <p>
    <strong>Sick:</strong>
    <%= person.sick %>
  </p>

  <p>
    <strong>Date exposed:</strong>
    <%= person.date_exposed %>
  </p>

  <p>
    <strong>Date logged:</strong>
    <%= person.date_logged %>
  </p>

</div>
