<%= form_tag(@people, method: :get) do %>

  <%= label_tag :first_name, "Your First Name:" %>
  <%= text_field_tag :first_name %>

  <%= label_tag :last_name, "Your Last Name:" %>
  <%= text_field_tag :last_name %>

  <%= label_tag :contact_name, "Contact First Name:" %>
  <%= text_field_tag :contact_first_name %>

  <%= label_tag :contact_name, "Contact Last Name:" %>
  <%= text_field_tag :contact_last_name %>

  <%= label_tag :contact_date, "Date of Contact:" %>
  <%= date_field_tag :contact_date %>

  <%= submit_tag "Search" %>
<% end %>
